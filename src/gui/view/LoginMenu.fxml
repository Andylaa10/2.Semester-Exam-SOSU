<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="535.0" prefWidth="800.0" stylesheets="@css/Main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.LoginMenuController">
   <children>
      <ImageView fitHeight="612.0" fitWidth="800.0" opacity="0.82" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/LogInScreen.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="155.0" fitWidth="228.0" layoutX="286.0" layoutY="126.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/Logo.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtFieldUsername" alignment="CENTER" layoutX="309.0" layoutY="296.0" prefHeight="37.0" prefWidth="181.0" promptText="Username">
         <effect>
            <DropShadow />
         </effect></TextField>
      <PasswordField fx:id="pField" alignment="CENTER" layoutX="308.0" layoutY="354.0" prefHeight="38.0" prefWidth="182.0" promptText="Password">
         <effect>
            <DropShadow />
         </effect></PasswordField>
      <Button fx:id="btnLogin" layoutX="350.0" layoutY="412.0" mnemonicParsing="false" onAction="#Login" prefHeight="26.0" prefWidth="98.0" text="Login">
         <effect>
            <Bloom threshold="0.64" />
         </effect></Button>
   </children>
</AnchorPane>
